<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Button x:Name="HamburgerButton" Grid.Row="0" Content="≡" Click="HamburgerButton_Click" Height="30" Width="30" HorizontalAlignment="Left"/>
        <StackPanel x:Name="SideMenu" Grid.Row="1" Width="0" Background="LightGray" HorizontalAlignment="Left">
            <Button Content="Профиль" Margin="0,5,0,5"/>
            <Button Content="Друзья" Margin="0,5,0,5"/>
            <Button Content="Настройки" Margin="0,5,0,5"/>
            <Button Content="О Программе" Margin="0,5,0,0"/>
        </StackPanel>

        
    </Grid>
</Window>
